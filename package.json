{
  "name": "rainbow-room-api",
  "version": "1.0.0",
  "description": "API for the Rainbow Room inventory tracking application",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "concurrently \"tsc -w\" \"nodemon dist/server.js\"",
    "dev:all": "concurrently \"npm run dev\" \"cd frontend && npm run dev\"",
    "dev:clean": "lsof -ti:3001 | xargs kill -9 2>/dev/null || true && npm run dev:all",
    "setup-db": "node dist/database/setup.js",
    "reset-db": "node scripts/reset-db.js",
    "populate-db": "node scripts/populate-mock-data.js",
    "refresh-db": "npm run build && npm run reset-db && npm run populate-db",
    "build:frontend": "cd frontend && npm run build",
    "build:all": "npm run build && npm run build:frontend",
    "render-init": "node scripts/render-init.js",
    "render-build": "npm install && npm run build && NODE_ENV=production RENDER=true node scripts/render-init.js && npm run render-setup",
    "render-start": "npm start",
    "update-stock-levels": "node scripts/update-stock-levels.js",
    "render-setup": "node scripts/render-setup-data.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "inventory",
    "tracking",
    "rainbow-room",
    "donation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/cors": "^2.8.17",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "papaparse": "^5.4.1",
    "qrcode": "^1.5.3",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/papaparse": "^5.3.14",
    "@types/qrcode": "^1.5.5",
    "@types/sqlite3": "^3.1.11",
    "@types/uuid": "^9.0.7",
    "concurrently": "^8.2.2",
    "glob": "^11.0.2",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  }
}
