{
  "name": "rainbow-room-inventory",
  "version": "1.0.0",
  "description": "Secure inventory tracking system for Children's Advocacy Center Rainbow Room",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "setup-db": "node scripts/setup-db.js",
    "reset-db": "node scripts/reset-db.js",
    "seed-data": "node scripts/seed-data.js",
    "refresh-db": "npm run reset-db && npm run setup-db && npm run seed-data",
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js"
  },
  "keywords": [
    "inventory",
    "nonprofit",
    "sqlite",
    "sqlcipher",
    "qr-codes"
  ],
  "author": "Children's Advocacy Center",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "uuid": "^11.1.0",
    "zod": "^4.1.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.0",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
